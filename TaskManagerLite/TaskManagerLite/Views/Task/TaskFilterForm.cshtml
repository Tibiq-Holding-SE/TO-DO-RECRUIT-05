@model TaskManagerLite.Entities.CompositeViewModel;
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Search</h5>

        <div class="form-group">
            <label for="textInput">Name:</label>
            <input id="textInput" type="text" class="form-control">
        </div>

        <div class="form-check">
            <input id="showDeletedInput" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="showDeletedInput">Show Deleted</label>
        </div>

        <div class="form-check">
            <input id="showExpiredInput" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="showExpiredInput">Show Expired</label>
        </div>

        <div class="form-check">
            <input id="showFinishedInput" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="showFinishedInput">Show Finished</label>
        </div>

        <div class="form-group">
            <button class="btn-info task-button" onclick="Submit()">Submit</button>
        </div>
    </div>
</div>