@using TaskManagerLite.Entities;
@model CreateTaskRequest;

<div class="modal fade" id="createTaskModal" tabindex="-1" role="dialog" aria-labelledby="createTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTaskModalLabel">Create Task</h5>
                <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="nameInput" asp-for="Name" placeholder="Name" />
                <input id="descInput" asp-for="Description" placeholder="Description" />
                <input id="duedateInput" asp-for="DueDate"/>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Close()" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="CreateTask()" class="btn btn-primary" data-dismiss="modal">Create Task</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Close()
    {
        $('#createTaskModal').modal('hide');
    }
</script>